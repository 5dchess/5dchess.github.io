header#top
  .site-title-nav
    input#tn-tg.topnav-toggle.fullscreen-toggle(type='checkbox' autocomplete='off' aria-label='Navigation')
    label.fullscreen-mask(for='tn-tg')
    label.hbg(for='tn-tg')
      span.hbg__in
    h1.site-title
      a(href='/')
        | lichess
        span .org
    nav#topnav.hover
      section
        a(href='/')
          span.play Play
          span.home lichess.org
        div(role='group')
          a(href='/?any#hook') Create a game
      section
        a(href='/practice') Learn
        div(role='group')
          a(href='/learn') Tutorials
          a(href='https://www.youtube.com/watch?v=eqMEiBu4M1c') Videos
      section
        a(href='/analysis') Tools
        div(role='group')
          a(href='/analysis') Analysis board
          a(href='/editor') Board editor
          a(href='/paste') Import game
  .site-buttons
    #clinput
      a.link
        span(data-icon='y')
      input(spellcheck='false' autocomplete='false' aria-label='Search' placeholder='Search')
    div
      a#challenge-toggle.toggle.link
        span.data-count(title='Challenges' data-count='0' data-icon='U')
      #challenge-app.dropdown
    div
      a#notify-toggle.toggle.link
        span.data-count(title='Notifications' data-count='0' data-icon='ÓÄè')
      #notify-app.dropdown
    .dasher
      a#user_tag.toggle.link(href='/logout') Player
      #dasher_app.dropdown
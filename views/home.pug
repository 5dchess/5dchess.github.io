extends layout

block content

  #banner.jumbotron
    .container
      h1 5D Chess
      p.
        A real-time multi-player 5d chess app 
      p.
        WIP on html right now, sorry for the downtime
      p.
        <a class="btn btn-primary" href="https://www.youtube.com/watch?v=eqMEiBu4M1c">
        Tutorial video
        </a>


  #welcome.container
    .div(style="width:500px")
      label(for="playerName") Name
      input#playerName.form-control(type="text", name="player-name", placeholder="Player 1",style="margin:5px")
      button#nameSubmit.btn.btn-primary(type="submit",style="margin:5px") Begin
  
  #gameoptions.container(hidden='')
    button#single.btn.btn-primary() Singleplayer
    button#multi.btn.btn-primary() Multiplayer
    
  #multiplayer.container(hidden='')
    
    
  audio#music(src="https://cdn.glitch.com/5e0f9006-3453-41ad-b0eb-222438390afa%2Fytmp3free.cc_mittsies-vitality-youtubemp3free.org.mp3?v=1619244746188" loop="true" autoplay)
  script.
    const audio = document.getElementById('music');
    audio.volume = 0.2;

  script(src="/js/jquery.min.js")
  script(src="/js/bootstrap.min.js")
  
  script.
    $('#nameSubmit')[0].onclick = function() {
       $('#welcome').fadeOut();
       $('#gameoptions').fadeIn();
    };
